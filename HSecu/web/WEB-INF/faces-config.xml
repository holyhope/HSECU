<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <description>Loging Page</description>
        <from-view-id>/findDM.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.checkValidUser}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/inscriptionOK.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userBean.checkValidUser}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/failure.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{inscriptionBean.validerInscription}</from-action>
            <from-outcome>connetionOk</from-outcome>
            <to-view-id>/connetionOk.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{inscriptionBean.validerInscription}</from-action>
            <from-outcome>inscriptionOK</from-outcome>
            <to-view-id>/connetionKO.xhtml</to-view-id>
        </navigation-case>
        
 
 
    </navigation-rule>
</faces-config>
